<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_large"
    android:background="@drawable/bg_common"
    android:elevation="3dp"
    android:orientation="vertical"
    android:outlineProvider="background">

    <com.cambium.challenge.components.RalewaySemiBoldTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_daytogo"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:paddingBottom="2dp"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingTop="@dimen/margin_small"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_medium" />

    <LinearLayout
        android:id="@+id/ll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_toRightOf="@+id/tv_daytogo"
        android:orientation="horizontal">

        <com.cambium.challenge.components.RalewayRegularTextView
            android:id="@+id/tv_amtpledged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_notes"
            android:drawablePadding="@dimen/margin_small"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/margin_normal"
            android:text=""
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/font_normal" />

        <com.cambium.challenge.components.RalewayRegularTextView
            android:id="@+id/tv_backers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_amtpledged"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_usersgroup"
            android:drawablePadding="@dimen/margin_small"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/margin_normal"
            android:text=""
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/font_normal" />

    </LinearLayout>




    <com.cambium.challenge.components.RalewaySemiBoldTextView
        android:id="@+id/tv_daytogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:background="@color/colorAccent"
        android:gravity="center_vertical|center_horizontal"
        android:includeFontPadding="false"
        android:padding="@dimen/margin_normal"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="32sp" />



</RelativeLayout>